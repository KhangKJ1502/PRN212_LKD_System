<Page x:Class="LorKingDom_Management_System.Views.Admin.ProductView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:LorKingDom_Management_System.Views.Admin"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d"
      d:DesignHeight="450"
      d:DesignWidth="800"
      Title="ProductView"
      Background="white">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition  Width="7*" />
            <ColumnDefinition  Width="4*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="8*" />
            <RowDefinition Height="7*" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0"
              Grid.Column="2"
              Grid.RowSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4*" />
                <ColumnDefinition Width="8*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="2*" />
                <RowDefinition Height="2*" />
                <RowDefinition Height="2*" />
                <RowDefinition Height="2*" />
                <RowDefinition Height="2*" />
                <RowDefinition Height="2*" />
                <RowDefinition Height="2*" />
                <RowDefinition Height="2*" />
            </Grid.RowDefinitions>
            <Label Content="Product Name: "
                   FontWeight="Bold"
                   Height="28"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Bottom"
                   FontSize="12" />
            <Label Grid.Row="1"
                   Content="Price: "
                   FontWeight="Bold"
                   Height="28"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Bottom"
                   FontSize="12" />
            <Label Grid.Row="2"
                   Content="Quantity: "
                   FontWeight="Bold"
                   Height="28"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Bottom"
                   FontSize="12" />
            <Label Grid.Row="3"
                   Content="Status: "
                   FontWeight="Bold"
                   HorizontalAlignment="Right"
                   Height="28"
                   VerticalAlignment="Bottom"
                   FontSize="12" />
            <Label Grid.Row="4"
                   Content="Description: "
                   FontWeight="Bold"
                   HorizontalAlignment="Right"
                   Height="28"
                   VerticalAlignment="Bottom"
                   FontSize="12" />
            <Label Grid.Row="5"
                   Content="Material: "
                   HorizontalAlignment="Right"
                   FontWeight="Bold"
                   Height="28"
                   VerticalAlignment="Bottom"
                   FontSize="12" />
            <Label Grid.Row="7"
                   Grid.Column="0"
                   Content="Category Name: "
                   FontWeight="Bold"
                   Height="28"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Bottom"
                   FontSize="12" />
            <Label Grid.Row="6"
                   Grid.Column="0"
                   Content="Min Age: "
                   FontWeight="Bold"
                   Height="28"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Bottom"
                   FontSize="12" />

            <TextBox Grid.Row="0"
                     Grid.Column="1"
                     Width="250"
                     Text="{Binding TextBoxItem.Name}"
                     HorizontalAlignment="Left"
                     VerticalAlignment="Center" />
            <TextBox Grid.Row="1"
                     Grid.Column="1"
                     Width="250"
                     Text="{Binding TextBoxItem.Price, StringFormat='${0:N0}'}"
                     HorizontalAlignment="Left"
                     VerticalAlignment="Center" />
            <TextBox Grid.Row="2"
                     Grid.Column="1"
                     Width="250"
                     Text="{Binding TextBoxItem.Quantity}"
                     HorizontalAlignment="Left"
                     VerticalAlignment="Center" />
            <TextBox Grid.Row="3"
                     Grid.Column="1"
                     Width="250"
                     Text="{Binding TextBoxItem.Status}"
                     HorizontalAlignment="Left"
                     VerticalAlignment="Center" />
            <TextBox Grid.Row="4"
                     Grid.Column="1"
                     Width="250"
                     Text="{Binding TextBoxItem.Description}"
                     HorizontalAlignment="Left"
                     VerticalAlignment="Center" />
            <TextBox Grid.Row="5"
                     Grid.Column="1"
                     Width="250"
                     Text="{Binding TextBoxItem.Material}"
                     HorizontalAlignment="Left"
                     VerticalAlignment="Center" />
            <TextBox Grid.Row="6"
                     Grid.Column="1"
                     Width="250"
                     Text="{Binding TextBoxItem.MinAge}"
                     HorizontalAlignment="Left"
                     VerticalAlignment="Center" />
            <ComboBox x:Name="comboBoxFruits"
                      Grid.Row="7"
                      Grid.Column="1"
                      IsEditable="True"
                      Width="250"
                      DisplayMemberPath="Name"
                      SelectedValuePath="CategoryId"
                      SelectedValue="{Binding TextBoxItem.CategoryId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                      SelectedItem="{Binding SelectedCategory, Mode=TwoWay}"
                      ItemsSource="{Binding categories}"
                      HorizontalAlignment="Left"
                      Style="{StaticResource MaterialDesignFloatingHintComboBox}" />

        </Grid>
        <Grid Grid.Row="2"
              Grid.Column="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="5*" />
                <ColumnDefinition Width="5*" />
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <StackPanel HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Height="181"
                            Width="146">
                    <Image x:Name="imgPreview"
                           Width="140"
                           Height="122"
                           Source="{Binding TextBoxItem.Image}"
                           Stretch="Uniform"
                           Margin="2" />
                    <Button Content="UP IMG"
                            Width="100"
                            Click="BtnSelectImage_Click" />
                </StackPanel>
            </Grid>
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*" />
                    <RowDefinition Height="2*" />
                    <RowDefinition Height="2*" />
                </Grid.RowDefinitions>
                <Button Command="{Binding AddCommand}"
                        Grid.Row="0"
                        Width="100"
                        Content="ADD"
                        FontWeight="Bold"
                        Foreground="Red" />
                <Button Grid.Row="1"
                        Width="100"
                        Content="UPDATE"
                        Command="{Binding UpdateCommand}"
                        FontWeight="Bold"
                        Foreground="Blue" />
                <Button Grid.Row="2"
                        Width="100"
                        Content="DELETE"
                        FontWeight="Bold"
                        Foreground="Brown"
                        Command="{Binding DeleteCommand}" />
            </Grid>
        </Grid>
        <Grid Grid.Row="0"
              Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="8*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>
            <TextBox Margin="25 5 0 5"
                     materialDesign:HintAssist.Hint="Search Product by Name"
                     Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                     FontSize="15"
                     Text="{Binding SearchText}" />
            <Button Grid.Column="1"
                    Width="100"
                    Content="SEARCH"
                    FontWeight="Bold"
                    Foreground="Brown"
                    Command="{Binding SearchCommand}" />
        </Grid>
        <Grid Grid.Row="1"
              Grid.Column="0"
              Grid.RowSpan="2">
            <Border BorderBrush="Gray"
                    BorderThickness="1"
                    CornerRadius="5"
                    Margin="10">
                <DataGrid Background="White"
                          AlternatingRowBackground="#F5F5F5"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          IsReadOnly="True"
                          ItemsSource="{Binding products}"
                          SelectedItem="{Binding SelectedItem, Mode=TwoWay}"
                          GridLinesVisibility="All"
                          HeadersVisibility="Column"
                          VerticalGridLinesBrush="LightGray"
                          HorizontalGridLinesBrush="LightGray"
                          BorderBrush="LightGray"
                          BorderThickness="1"
                          ScrollViewer.VerticalScrollBarVisibility="Hidden"
                          ScrollViewer.HorizontalScrollBarVisibility="Auto">
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background"
                                    Value="#FF91E9DD" />
                            <Setter Property="FontWeight"
                                    Value="Bold" />
                            <Setter Property="Padding"
                                    Value="5" />
                            <Setter Property="HorizontalContentAlignment"
                                    Value="Center" />
                        </Style>
                    </DataGrid.ColumnHeaderStyle>
                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Style.Triggers>
                                <Trigger Property="IsSelected"
                                         Value="True">
                                    <Setter Property="Background"
                                            Value="LightBlue" />
                                    <!-- Màu nền khi chọn -->
                                    <Setter Property="Foreground"
                                            Value="Black" />
                                    <!-- Màu chữ khi chọn -->
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.RowStyle>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID"
                                            Binding="{Binding ProductId}"
                                            Width="1*"
                                            MinWidth="50">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextAlignment"
                                            Value="Right" />
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTemplateColumn Header="IMG"
                                                Width="2*"
                                                MinWidth="100">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Image Source="{Binding Image}"
                                           Stretch="Uniform"
                                           Height="50" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Header="Name"
                                            Binding="{Binding Name}"
                                            Width="2*"
                                            MinWidth="150">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextWrapping"
                                            Value="Wrap" />
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Material"
                                            Binding="{Binding Material}"
                                            Width="1*"
                                            MinWidth="80" />
                        <DataGridTextColumn Header="MinAge"
                                            Binding="{Binding MinAge}"
                                            Width="1*"
                                            MinWidth="60">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextAlignment"
                                            Value="Right" />
                                    <Setter Property="TextAlignment"
                                            Value="Center" />
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Category"
                                            Binding="{Binding CategoryId}"
                                            Width="1*"
                                            MinWidth="65">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextAlignment"
                                            Value="Right" />
                                    <Setter Property="TextAlignment"
                                            Value="Center" />
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Price"
                                            Binding="{Binding Price,StringFormat='${0:N0}'}"
                                            Width="1.5*"
                                            MinWidth="120">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextAlignment"
                                            Value="Right" />
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Quantity"
                                            Binding="{Binding Quantity}"
                                            Width="1*"
                                            MinWidth="70">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextAlignment"
                                            Value="Right" />
                                    <Setter Property="TextAlignment"
                                            Value="Center" />
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Status"
                                            Binding="{Binding Status}"
                                            Width="1*"
                                            MinWidth="90">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextAlignment"
                                            Value="Right" />
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Description"
                                            Binding="{Binding Description}"
                                            Width="2*"
                                            MinWidth="180">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextWrapping"
                                            Value="Wrap" />
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                    </DataGrid.Columns>
                </DataGrid>
            </Border>
        </Grid>
    </Grid>
</Page>
