<Page x:Class="LorKingDom_Management_System.Views.Admin.ProductView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:LorKingDom_Management_System.Views.Admin"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d"
      d:DesignHeight="450"
      d:DesignWidth="800"
      Title="ProductView"
      Background="white">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition  Width="7*" />
            <ColumnDefinition  Width="4*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="8*" />
            <RowDefinition Height="7*" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0"
              Grid.Column="2"
              Grid.RowSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4*" />
                <ColumnDefinition Width="8*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="2*" />
                <RowDefinition Height="2*" />
                <RowDefinition Height="2*" />
                <RowDefinition Height="2*" />
                <RowDefinition Height="2*" />
                <RowDefinition Height="2*" />
                <RowDefinition Height="2*" />
            </Grid.RowDefinitions>
            <Label Content="Product Name: "
                   FontWeight="Bold"
  
                   Height="28"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Bottom"
                   FontSize="12" />
            <Label Grid.Row="1"
                   Content="Price: "
                   FontWeight="Bold"
                   Height="28"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Bottom"
                   FontSize="12" />
            <Label Grid.Row="2"
                   Content="Quantity: "
                   FontWeight="Bold"
                 
                   Height="28"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Bottom"
                   FontSize="12" />
            <Label Grid.Row="3"
                   Content="Status: "
                   FontWeight="Bold"
                   HorizontalAlignment="Right"
                   Height="28"
                   VerticalAlignment="Bottom"
                   FontSize="12" />
            <Label Grid.Row="4"
                   Content="Description: "
                   FontWeight="Bold"
                   HorizontalAlignment="Right"
                   
                   Height="28"
      
                   VerticalAlignment="Bottom"
                   FontSize="12" />
            <Label Grid.Row="5"
                   Content="Material: "
                   HorizontalAlignment="Right"
                   FontWeight="Bold"
                
                   Height="28"
              
                   VerticalAlignment="Bottom"
                   FontSize="12" />
            <Label Grid.Row="6" Grid.Column="0"
                   Content="Category Name: "
                   FontWeight="Bold"
                  
                   Height="28"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Bottom"
                   FontSize="12" />

            <TextBox Grid.Row="0"
                     Grid.Column="1"
                     Width="250"
                     HorizontalAlignment="Left"
                     VerticalAlignment="Center" />
            <TextBox Grid.Row="1"
                     Grid.Column="1"
                     Width="250"
                     HorizontalAlignment="Left"
                     VerticalAlignment="Center" />
            <TextBox Grid.Row="2"
                     Grid.Column="1"
                     Width="250"
                     HorizontalAlignment="Left"
                     VerticalAlignment="Center" />
            <TextBox Grid.Row="3"
                     Grid.Column="1"
                     Width="250"
                     HorizontalAlignment="Left"
                     VerticalAlignment="Center" />
            <TextBox Grid.Row="4"
                     Grid.Column="1"
                     Width="250"
                     HorizontalAlignment="Left"
                     VerticalAlignment="Center" />
            <TextBox Grid.Row="5"
                     Grid.Column="1"
                     Width="250"
                     HorizontalAlignment="Left"
                     VerticalAlignment="Center" />
            <ComboBox x:Name="comboBoxFruits"
                      Grid.Row="6"
                      Grid.Column="1"
                      IsEditable="True"
                      Width="250" 
                      HorizontalAlignment="Left"
                      Style="{StaticResource MaterialDesignFloatingHintComboBox}" />
        </Grid>
        <Grid Grid.Row="2"
              Grid.Column="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="5*" />
                <ColumnDefinition Width="5*" />
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <StackPanel HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Height="181"
                            Width="146">
                    <Image x:Name="imgPreview"
                           Width="140"
                           Height="122"
                           Stretch="Uniform"
                           Margin="2" />
                    <Button Content="UP IMG"
                            Width="100"
                            Click="BtnSelectImage_Click" />
                </StackPanel>
            </Grid>
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="2*"/>
                </Grid.RowDefinitions>
                <Button Grid.Row="0" Width="100" Content="ADD" FontWeight="Bold" Foreground="Red"/>
                <Button Grid.Row="1"
                        Width="100"
                        Content="UPDATE"
                        FontWeight="Bold"
                        Foreground="Blue" />
                <Button Grid.Row="2"
                        Width="100"
                        Content="DELETE"
                        FontWeight="Bold"
                        Foreground="Brown" />
            </Grid>
        </Grid>
        <Grid Grid.Row="0" Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="8*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <TextBox Margin="25 5 0 5" materialDesign:HintAssist.Hint="Search Product by Name"
                     Style="{StaticResource MaterialDesignFloatingHintTextBox}" FontSize="15"/>
            <Button Grid.Column="1"
                    Width="100"
                    Content="SEARCH"
                    FontWeight="Bold"
                    Foreground="Brown" />
        </Grid>
        <Grid Grid.Row="1" Grid.Column="0" Grid.RowSpan="2">
            <Border BorderBrush="Gray"
                    BorderThickness="1"
                    CornerRadius="5"
                    Margin="10">
                <DataGrid Background="White"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          GridLinesVisibility="All"
                          HeadersVisibility="Column">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="STT"
                                            Binding="{Binding STT}"
                                            Width="50" />
                        <DataGridTextColumn Header="Họ và Tên"
                                            Binding="{Binding FullName}"
                                            Width="150" />
                        <DataGridTextColumn Header="Tuổi"
                                            Binding="{Binding Age}"
                                            Width="70" />
                        <DataGridTextColumn Header="Địa chỉ"
                                            Binding="{Binding Address}"
                                            Width="200" />
                        <DataGridTextColumn Header="Số điện thoại"
                                            Binding="{Binding PhoneNumber}"
                                            Width="120" />
                        <DataGridCheckBoxColumn Header="Đã xác nhận"
                                                Binding="{Binding IsConfirmed}"
                                                Width="100" />
                        <DataGridTextColumn Header="Email"
                                            Binding="{Binding Email}"
                                            Width="150" />
                        <DataGridTextColumn Header="Ghi chú"
                                            Binding="{Binding Notes}"
                                            Width="*" />
                    </DataGrid.Columns>
                </DataGrid>
            </Border>
        </Grid>
    </Grid>
</Page>
